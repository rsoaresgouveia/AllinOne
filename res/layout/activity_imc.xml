<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/laranja"
    android:gravity="center"
    android:orientation="vertical" 
    android:padding="40dp">

    <TextView
        android:drawableRight="@drawable/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:text="@string/calc_imc"
        android:textColor="@color/branco"
        android:textSize="25sp"
        android:id="@+id/tvHomeImc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite seu Peso"
        android:textColor="@color/branco"
        android:textSize="20sp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edPeso"
        android:textColor="@color/branco"
        android:gravity="center"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite sua altura (CM)"
        android:textColor="@color/branco"
        android:textSize="20sp" 
        android:paddingTop="30dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edAltura"
        android:textColor="@color/branco"
        android:gravity="center"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btCalcImc"
            android:text="Calcular"
            android:background="@drawable/btn_calcular"
            android:textColor="@color/branco"
            />
        <Button 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btLimpar"
            android:text="Limpar"
            android:background="@drawable/btn_limpar"
            android:textColor="@color/branco"
            />
        
    </LinearLayout>

</LinearLayout>









